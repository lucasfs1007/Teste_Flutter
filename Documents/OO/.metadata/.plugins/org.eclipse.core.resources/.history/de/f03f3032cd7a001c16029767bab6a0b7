import java.util.Scanner; //Leitura de dados.
public class TP1 {

	public static void main(String[] args) {
		int opcao = 0; //As opcoes do menu.
		String temas[] = new String[50]; //Vetor onde poderei registrar até 50 temas.
		int quantidade = 1; //Variavel de contagem.
		Scanner tema_escolhido = new Scanner (System.in); //Leitura dos temas do usuario
		Scanner menu = new Scanner (System.in); //Leitura de opção do menu.
		do {
			System.out.println("Bem vindos ao jogo da forca !!!");
			System.out.println("1 - Gerenciar Temas: ");
			System.out.println("2 - Gerenciar Palavras: ");
			System.out.println("3 - Jogar: ");
			System.out.println("4 - Sair: ");
			System.out.println("Digite a opção desejada:");
			opcao = menu.nextInt(); //Leitura da opção desejada 
				//Opcoes do menu.
			switch(opcao) {
			case 1: System.out.println("Gerenciar Temas");
				for(int i=1; i<=quantidade; i++) {
					System.out.println("Digite o tema que gostaria de cadastrar: \n");
					temas[i] = tema_escolhido.nextLine(); //Leitura de cada tema em uma posição diferente.
					quantidade ++; //
					System.out.println("Na posição "  + i +  " Foi armazenado " + temas[i]); //Ele não printa aq
				}	
			break;
			case 2: System.out.println("Gerenciar Palavras \n");
				System.out.println("vc selecionou 2\n");
			break;
			case 3: System.out.println("Jogar \n");
				System.out.println("Vc selecionou 3\n");
			break;
			case 4: System.out.println("Sair \n");
				System.out.println("Muito obrigado até a próxima\n"); //Saída do programa.
			break;
			default:
				System.out.println("Opcao invalida, escolha uma\n"
						+ "opção de 1 a 4\n"); //Caso o usuario digite opcoes fora desses valores.
			}
		}while(opcao !=4); //Enquanto não se digitar 4 não sairei do looping.
	}

}
