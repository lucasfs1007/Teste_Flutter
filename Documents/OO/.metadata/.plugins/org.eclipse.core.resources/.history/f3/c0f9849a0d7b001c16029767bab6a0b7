import java.util.Scanner; //Leitura de dados.
public class TP1 {

	public static void main(String[] args) {
		int opcao_menu = 0, opcao_tema = 0; 
		int i = 0 , j = 0; 
		String [][]temas, pesquisa;
		temas= new String[50][50]; //Vetor onde poderei registrar até 50 temas.
		Scanner ler = new Scanner (System.in); //Leitura de dados.
		do {
			opcao_menu = Menu(opcao_menu, ler); //Função de menu
			switch(opcao_menu) {
			case 1: System.out.println("Gerenciar Temas");
				opcao_tema = Menu_Tema(opcao_tema, ler);// Função  de menu de tema
				switch(opcao_tema) {
				case 1: 
 					temas[i][j] = Gerenciar_tema(opcao_tema, ler, temas, i, j); //Funcao que le o tema registrado
 					i++;
 						j++;
 				break;
				case 2:
				break;
				case 3:
					temas[i][j] = Buscar_tema(opcao_tema, ler, temas, pesquisa,  i, j); //Função que busca por temas.
				break;
				}
			break;
			case 2: System.out.println("Gerenciar Palavras \n");
				System.out.println("vc selecionou 2\n");
			break;
			case 3: System.out.println("Jogar \n");
				System.out.println("Vc selecionou 3\n");
			break;
			case 4: System.out.println("Sair \n");
				System.out.println("Muito obrigado até a próxima\n"); //Saída do programa.
			break;
			default:
				System.out.println("Opcao invalida, escolha uma\n"
						+ "opção de 1 a 4\n"); //Caso o usuario digite opcoes fora desses valores.
			}
		}while(opcao_menu !=4); //Enquanto não se digitar 4 não sairei do looping.
	}



public static int Menu(int opcao_menu, Scanner ler) {
	System.out.println("Bem vindos ao jogo da forca !!!");
	System.out.println("1 - Gerenciar Temas: ");
	System.out.println("2 - Gerenciar Palavras: ");
	System.out.println("3 - Jogar: ");
	System.out.println("4 - Sair: ");
	System.out.println("Digite a opção desejada:");
	System.out.println("");
	opcao_menu =ler.nextInt(); //Leitura da opção desejada 
	System.out.println("");
		//Opcoes do menu.
	return opcao_menu;
}
public static int Menu_Tema(int opcao_tema, Scanner ler) {
	//Menu de opcoes dos temas do case 1.
	System.out.println(" 1 - Cadastrar tema: ");
	System.out.println(" 2 - Buscar tema: ");
	System.out.println(" 3 - Excluir tema: ");
	System.out.println(" Digite a opcao desejada: ");
	System.out.println("");
	opcao_tema = ler.nextInt(); //Leitura de opcao de tema.	
	System.out.println("");
	return opcao_tema; //Retorno o menu de opcao de temas
}
public static String Gerenciar_tema(int opcao_tema, Scanner ler, String temas[][], int i, int j) {
	System.out.println(" 1 - Cadastrar tema:");
				System.out.println("Digite o tema desejado:");
				temas[i][j] = ler.next(); //Leitura do tema.
				System.out.println("Na posição "  + i +  " Foi armazenado " + temas[i][j]);
		return temas[i][j]; //Retorno o tema em uma dada posição
}
public static String Buscar_tema(int opcao_tema, Scanner ler, String temas[][], String pesquisa, int i, int j) {
	System.out.println(" 3 - Buscar tema:");
	System.out.println(" Digite um tema para ser buscado: ");
	pesquisa = ler.next();
	return temas[i][j]; //Retorno do tema escolhido
}
}
